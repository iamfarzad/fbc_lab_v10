{
  "name": "fbc_lab_v10",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "dev:server": "tsx watch server/live-server.ts",
    "start:server": "tsx server/live-server.ts",
    "build:server": "tsc --project tsconfig.server.json",
    "check:secrets": "node scripts/check-secrets.js",
    "check:circular": "node scripts/check-circular-deps.js",
    "check:unused": "node scripts/check-unused-exports.js",
    "check:naming": "node scripts/check-naming-consistency.js",
    "check:all": "pnpm check:secrets && pnpm type-check && pnpm lint && pnpm check:circular && pnpm check:unused && pnpm check:naming",
    "test:e2e:guide": "node scripts/test-browser-e2e.js",
    "verify:deployment:guide": "node scripts/verify-deployment.js",
    "logs:local": "node scripts/monitor-logs.js local",
    "logs:prod": "node scripts/monitor-logs.js production",
    "status": "node scripts/update-status.js",
    "status:check": "cat PROJECT_STATUS.md | head -30",
    "verify:context": "node scripts/verify-context-system.js"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.2.1",
    "eslint": "^8.55.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "husky": "^8.0.3",
    "jsdom": "^23.0.1",
    "prettier": "^3.1.1",
    "typescript": "^5.2.2",
    "vite": "^5.0.8",
    "vitest": "^1.0.4"
  },
  "scripts": {
    "prepare": "husky install"
  }
}

